<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/relativelayout">
    <ImageView
        android:id="@+id/favImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>


    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/favTVnameRu"
        android:paddingLeft="4dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@id/favImg"
        android:text="Викинги"
        android:textSize="20sp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/favTVDetailRu"
        android:paddingLeft="4dp"
        android:text="(Vikings)"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_below="@+id/favTVnameRu"
        android:layout_toRightOf="@+id/favImg"
        android:layout_toEndOf="@+id/favImg"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/favDate"
        android:paddingTop="10dp"
        android:paddingLeft="4dp"
        android:text="24.02.1993 23:15"
        android:layout_below="@+id/favTVDetailRu"
        android:layout_toRightOf="@+id/favImg"
        android:layout_toEndOf="@+id/favImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favEpisode"
        android:text="01.01"
        android:paddingTop="10dp"
        android:layout_alignTop="@id/favDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>