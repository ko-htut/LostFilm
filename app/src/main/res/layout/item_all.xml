<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/item_all_relativelayout">

    <ImageView
        android:id="@+id/allImg"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        android:layout_height="90dp"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/allTVnameRu"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/allImg"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toBottomOf="@+id/allEpisode"
        android:text="Викингиkkkkkkkkkkkkkhgfhhg"
        android:scrollHorizontally="false"
        android:ellipsize="end"
        android:maxLines="1"
         />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/allTVnameEng"
        android:paddingLeft="4dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/allTVnameRu"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/allImg"
        android:layout_marginLeft="4dp"
        android:scrollHorizontally="true"
        android:text="(Vikings)"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/allEpisode"
        android:paddingLeft="4dp"
        android:text="24.02.1993 23:15"
        android:ellipsize="end"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="1dp" />


</android.support.constraint.ConstraintLayout>